generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  username String  @id
  password String
  name     String
  token    String?
}

model Dataset {
  id             Int      @id @default(autoincrement())
  customer_id    Int
  customer_name  String
  recency        Int
  frequency      Int
  monetary       Float
  createdAt      DateTime @default(now())
}
